@{
}
@model CalcApp.Models.numbers
    <style>
        .content {
            max-width: 500px;
            margin: auto;
            border-color: aqua
        }
    </style>
    <div class="content">

        @using (Html.BeginForm("Index", "CalcAppControllerClass"

      , FormMethod.Post))
        {
        @ViewBag.error
            <br />
            <b>Enter the value to calculate:</b>
            <br />
            <br />
            <b style="color:Background">Ex:3+4,5-7,5*6,21/7</b>
            <br />
            @Html.TextBoxFor(model => model.Number)
            @Html.ValidationMessageFor(model => model.Number)
            <br />
            <br />
            <br />
            <input type="submit" name="buttonName" value="enter" />

        }


        <b>RESULT:</b>
        <br />
        <br />
        @Html.TextBoxFor(model => model.result)
        <br />
        <br />
        <div id="logs" disabled>
            <b>Logs</b>
            <br />
            @foreach (var item in Model.value)
            {
                <table>
                    <tr>
                        @item.ToString();
                    <tr />
                </table>
            }

        </div>
    </div>
    @*@Html.TextArea("results", new { rows = 40, columns = 80 })*@

