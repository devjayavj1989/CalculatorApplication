@{

}
<style>
    .content {
        max-width: 500px;
        margin: auto;
        border-color:aqua
    }
</style>

@model CalcApp.Models.LoginModel
    <div class="content">
        <input type="radio" id=" select" name="auth" checked />
        <label for="select">Select</label>
        <input type="radio" id="Login" name="auth" class="Login" onclick="show2();" />
        <label for="Login">Login</label>
        <input type="radio" id="SignUp" name="auth" class="SignUp" onclick="show1();" />
        <label for="SignUp">SignUp</label>
        <br />
        <br />

        @ViewBag.error
        <script type="text/javascript">function show1() {
    document.getElementById('SignUp1').hidden = false;
    document.getElementById('Login1').hidden = true;
            }
            function show2() {
                document.getElementById('Login1').hidden = false;
                document.getElementById('SignUp1').hidden = true;
            }</script>


        <div id="SignUp1" class="SignUp" hidden>

            @using (Html.BeginForm("SignUp", "CalcAppControllerClass", FormMethod.Post))
            {
                <b>Please Enter Details:</b>
                <br />
                <br />
                
                <b>USERNAME(upto 8 characters)</b>
                <br />
                @Html.TextBoxFor(model => Model.Username)
                <br />
                <br />
                <b>PASSWORD(upto 8 characters)</b>
                <br />
                @Html.TextBoxFor(model => Model.password)
                <br />
                <br />
                <input type="Submit" name="SignUp" value="Sign up" onclick="location.href = '@Url.Action("SignUp", "CalcAppControllerClass")'" />



            }
        </div>
        <div id="Login1" class="Login" hidden>

            @using (Html.BeginForm("LoginAction", "CalcAppControllerClass", FormMethod.Post))
            {
                <b>Please Enter Details</b>
                <br />
                <br />
                <b>USERNAME</b>
                <br />
                @Html.TextBoxFor(model => Model.Username)
                <br />
                <br />
                <b>PASSWORD</b>
                <br />
                @Html.TextBoxFor(model => Model.password)
                <br />
                <br />



                <input type="Submit" name="LoginButton" value="Login" onclick="location.href = '@Url.Action("LoginAction", "CalcAppControllerClass")'" />

            }
        </div>

    </div>